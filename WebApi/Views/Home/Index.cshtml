        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
    </div>
</div>
<div class="row" style="background-color: #ffd800">
    <div class="col-sm-12">
        <div class="text-center">
            <input type="button" id="consultar" value="Consultar" />
            <input type="text" id="valorEliminar" />
            <input type="button" id="borrar" value="Borrar" placeholder="Numero de registro a eliminar" />
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#consultar").click(function () {
                $.get("/api/values", function (data, status) {
                    console.log(data, status);
                });
            });
            $("#borrar").click(function () {
                var value = $("#valorEliminar").val();
                $.ajax({
                    url: "/api/values/" + value,
                    type: 'DELETE',
                },function (data, status) {
                    console.log(data, status);
                });
            });
        });
    </script>
}